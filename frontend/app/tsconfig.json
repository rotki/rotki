{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "node",
      "vuetify",
      "vue-i18n",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "unplugin-vue-define-options/macros-global"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components.d.ts"
  ],
  "exclude": ["node_modules/**", "**/.*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "vueCompilerOptions": {
    "target": 2.7
  }
}
