{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "vue-i18n",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "@intlify/unplugin-vue-i18n/messages"
    ],
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components.d.ts"
  ],
  "exclude": ["node_modules/**", "**/.*"],
  "vueCompilerOptions": {
    "target": 3.4
  }
}
